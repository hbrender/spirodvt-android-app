<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.PatientInfoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:padding="15dp">

    <TextView
        android:id="@+id/patientInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Information"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/patientIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:text="Patient ID: " />

    <EditText
        android:id="@+id/patientIdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:hint="unique number"
        android:inputType="number" />

    <TextView
        android:id="@+id/firstNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="First Name:" />

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="name"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name:" />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="name"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/heightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="Height: " />

    <EditText
        android:id="@+id/heightFeetEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ft."
        android:layout_columnSpan="1"
        android:inputType="number" />

    <EditText
        android:id="@+id/heightInchesEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="in."
        android:layout_columnSpan="1"
        android:inputType="number" />

    <TextView
        android:id="@+id/weightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="Weight: " />

    <EditText
        android:id="@+id/weightPoundsEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="lb."
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="Age: " />

    <EditText
        android:id="@+id/ageEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="years"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:inputType="number" />

    <TextView
        android:id="@+id/sexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="Sex: " />

    <Spinner
        android:id="@+id/sexSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/sex_array"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal" />

    <View style="@style/Divider"/>

    <TextView
        android:id="@+id/spirometerInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incentive Spirometer"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/spirometerIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="Device ID: " />

    <EditText
        android:id="@+id/spirometerIdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:hint="unique ID"
        android:inputType="number" />

    <TextView
        android:id="@+id/inhalationNumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="Inhalations\nper hour: " />

    <EditText
        android:id="@+id/inhalationsNumIdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:hint="number"
        android:inputType="number" />

    <TextView
        android:id="@+id/lungVolumeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="Lung volume: " />

    <EditText
        android:id="@+id/lungVolumeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:hint="ml."
        android:inputType="number" />

    <View style="@style/Divider" />

    <TextView
        android:id="@+id/dvtInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DVT Prevention Device"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/dvtIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="Device ID: " />

    <EditText
        android:id="@+id/dvtIdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:hint="unique ID"
        android:inputType="number" />

    <TextView
        android:id="@+id/repsNumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="Repetitions\nper hour: " />

    <EditText
        android:id="@+id/repsNumIdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:hint="number"
        android:inputType="number" />

    <TextView
        android:id="@+id/resistanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="1"
        android:text="Resistance: " />

    <Spinner
        android:id="@+id/dvtResistanceSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/resistance_array"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal" />

</GridLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activities.BluetoothTestActivity">


    <Button
        android:text="ON/OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/btnOnOff"/>

    <Button
        android:text="Enable Discoverable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discoverableOnOff"
        android:onClick="enableDisableDiscoverable"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFindUnpairedDevices"
        android:text="Discover"
        android:onClick="discoverDevices"/>

    <ListView
        android:layout_marginTop="15dp"
        android:layout_below="@+id/startAcceptThread"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/newDevices"/>

    <Button
        android:id="@+id/startAcceptThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnFindUnpairedDevices"
        android:layout_marginTop="10dp"
        android:text="Start Accept Thread" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/newDevices"
        android:id="@+id/recievedText"/>

    <TextView
        android:id="@+id/nearbyD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nearby Devices:"
        android:textSize="16sp"
        android:layout_below="@id/startAcceptThread"/>

    <TextView
        android:id="@+id/bondedD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bonded Devices:"
        android:textSize="16sp"
        android:layout_below="@id/newDevices"/>

    <ListView
        android:id="@+id/bondedDevices"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/bondedD"/>

</RelativeLayout>